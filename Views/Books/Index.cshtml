@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<br />
<h3>Book List</h3>
<hr />
<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Create New</a>
</p>

@if (Model.Count() > 0)
{

    <div class="border">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Price</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Author</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Details</a>
                        <a asp-action="Delete" onclick="return confirm('Are you sure?')" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>


}
else
{
    <div>No Books Exists... Please Add a new book</div>
}

